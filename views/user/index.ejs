<div class="container-fluid form-style-6 d-flex flex-column justify-content-center align-items-center" style="width: 600px;">

<h2>User Profile</h2>
<img class="divider" src="/images/divider.png">

<form method="POST" action="/user/update?id=<%= user._id %>" enctype="multipart/form-data" >
<div class="row">
    <div class="col-12 mb-2">
        <label class="d-flex justify-content-start">Name:</label>
        <input type="text" name="name" value="<%= user.name %>" class="form-control">
    </div>
    <!-- Here the Account Type -->
    <!-- Hidden input for storing the actual isAdmin value -->
    <input type="hidden" name="isAdmin" value="<%= user.isAdmin %>">
    <!-- Displayed user type -->
    <div class="col-12 mb-2">
        <label class="d-flex justify-content-start">User Type:</label>
        <input  type="text" name="displayedUserType" value="<%= user.isAdmin ? 'admin' : 'user' %>" class="form-control" readonly>
    </div>
    <div class="col-12 mb-2">
        <label class="d-flex justify-content-start">Email Address:</label>
        <input type="text" name="readOnly-email" value="<%= user.email %>" class="form-control" readonly>
    </div>
    <div>
        <label class="d-flex justify-content-start">Profile Picture:</label>
        <img src="<%= user.avatar %>" class="uploadSize ">
        <input class="form-control" type="file" name="avatarImg" accept="image/*">
    </div>

    <button type="submit" class="navList">Update Profile</button>
</div>
</form>
</div>


