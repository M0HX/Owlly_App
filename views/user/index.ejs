<h1>User Profile</h1>

<form method="POST" action="/user/update?id=<%= user._id %>" enctype="multipart/form-data">
   
    <div>
        <label>Name:</label>
        <input type="text" name="name" value="<%= user.name %>" class="form-control bg-dark text-light">
    </div>

    <br>

    <!-- Here the Account Type -->
    <!-- Hidden input for storing the actual isAdmin value -->
    <input type="hidden" name="isAdmin" value="<%= user.isAdmin %>">

    <!-- Displayed user type -->
    <div>
        <label>User Type:</label>
        <input type="text" name="displayedUserType" value="<%= user.isAdmin ? 'admin' : 'user' %>" class="form-control bg-dark text-light" readonly>
    </div>


    <br>

    <div>
        <label>Email Address:</label>
        <input type="text" name="readOnly-email" value="<%= user.email %>" class="form-control bg-dark text-light" readonly>
    </div>

    <br>
    
    <div>
        <label>Profile Picture:</label>
        <!-- Clickable image to trigger file input -->
        <img src="<%= user.avatar %>" alt="Profile Picture" id="profilePicture" class="clickable-image">
        <!-- Hidden file input -->
        <input type="file" id="avatarInput" name="avatar" accept="image/*" style="display:none;">
    </div>
       
    <br>

   <button type="submit" class="btn btn-primary">Update Profile</button>
</form>