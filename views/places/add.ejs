<div class="form-style-6">
    <h1>Add Place</h1>


    <form method="POST" action="/place/add">
        <div>
            <label>Name: </label>
            <input type="text" name="name" class="form-control bg-dark text-light">
        </div>

        <div>
            <label>Email Address: </label>
            <input type="text" name="emailAddress" class="form-control bg-dark text-light">
        </div>

        <div>
            <label>Phone Number: </label>
            <input type="text" name="phoneNumber" class="form-control bg-dark text-light">
        </div>

        <br>
        <button type="submit" class="btn btn-primary">Add Author</button>
    </form>
</div>