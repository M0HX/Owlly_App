<h1>Places</h1>

<table class="table table-dark table-hover">
    <tr>
        <th>Name</th>
        <th>Email Address</th>
        <th>Phone Number</th>
        <th>Created At</th>
        <th>Updated At</th>
        <th>Delete</th>
        <th>Edit</th>
    </tr>


    <% authors.forEach(function(author) { %>
        <tr>

           
            <!-- <td> <%= author.name %> </td> -->
            <td>
                <a href="/author/detail?id=<%= author._id %>"> 
                    <%= author.name %> 
                </a> 
            </td>
            <td> <%= author.emailAddress %> </td>
            <td> <%= author.phoneNumber %> </td>
            <td> <%= author.createdAt %> </td>
            <td> <%= author.updatedAt %> </td>
            <!-- <td><a href="/article/delete?id=<%= author._id %>">Delete</a></td> -->

            <td>
            <form method="POST" action="/author/delete?id=<%= author._id %>&_method=delete">
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>
            </td>

            <td>
            <form method="GET" action="/author/edit?id=<%= author._id %>">
                <input type="hidden" name="id" value="<%= author._id %>">
                <button type="submit" class="btn btn-secondary">Edit</button>
            </form>
            </td>

        </tr>
    <% }) %>
    

</table>