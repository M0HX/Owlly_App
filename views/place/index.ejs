<h1>Places</h1>

<table class="table table-dark table-hover">
    <tr>
        <th>Name</th>
        <th>Delete</th>
        <th>Edit</th>
    </tr>


    <% place.forEach(function(place) { %>
        <tr>

           
            <!-- <td> <%= place.name %> </td> -->
            <td>
                <a href="/place/detail?id=<%= place._id %>"> 
                    <%= place.name %> 
                </a> 
            </td>
    
            <td>
            <form method="POST" action="/place/delete?id=<%= place._id %>&_method=delete">
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>
            </td>

            <td>
            <form method="GET" action="/place/edit?id=<%= place._id %>">
                <input type="hidden" name="id" value="<%= place._id %>">
                <button type="submit" class="btn btn-secondary">Edit</button>
            </form>
            </td>

        </tr>
    <% }) %>
    

</table>